generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Table {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  themes      Theme[]
}

model Theme {
  id        Int        @id @default(autoincrement())
  name      String
  order     Int
  table_id  Int
  table     Table      @relation(fields: [table_id], references: [id])
  subthemes Subtheme[]
}

model Subtheme {
  id          Int          @id @default(autoincrement())
  name        String
  order       Int
  theme       Theme        @relation(fields: [theme_id], references: [id])
  theme_id    Int
  descriptors Descriptor[]
}

model Descriptor {
  id          Int      @id @default(autoincrement())
  text        String
  subtheme    Subtheme @relation(fields: [subtheme_id], references: [id])
  subtheme_id Int
}
